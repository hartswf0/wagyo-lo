    </audio>
    <audio id="Bricks">
      <source src="https://cdn.glitch.com/51742877-87e2-47f0-8659-985a1e6f3613%2Fsmb_coin.wav?v=1588796945168" type="audio/wav">
    </audio>  
    <audio id="Error">
      <source src="https://cdn.glitch.global/ea872a2d-18bc-46bd-a284-c2fd1b1b67e4/mixkit-wrong-electricity-buzz-955.wav?v=1681045775349" type="audio/wav">
    </audio>  
    <div id="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;"></div>
    
    <form class="chat-form" id="submission-form" method="post">
      <h2 class="chat-form__title">Chat with the Builder</h2>
      <div id="color-result"></div>
      <div class="chat-form__group">
        <label class="chat-form__label" for="user_prompt">Prompt:</label>
        <input class="chat-form__input" type="text" name="user_prompt" id="user_prompt">
      </div>
      <button class="chat-form__btn" id="send-btn" type="submit">Send!</button>
       <div class="chat-form__group" style="display:none" id="revise-group">
        <label class="chat-form__label" for="revise_prompt">Revise Previous (optional):</label>
        <input class="chat-form__input" type="text" name="revise_prompt" id="revise_prompt">
      </div>
      <button class="chat-form__btn" id="revise-btn" type="submit" style="display:none">Revise!</button>
      <br>
      <div>
        <button class="chat-form__btn" type="submit" id="positive-rating" style="float:right" data-tag="0">Like this build? üëç</button>
       </div>
    </form>


    
    <a-scene ar style="pointer-events: auto;">
      <a-entity id="rig">
        <a-camera look-controls rotation-reader id="camera" position ="0 0 0">
        </a-camera>
      </a-entity>

      <a-plane position="0 -0.5 0" rotation="-90 0 0" height="10" width="10" color="#7BC8A4"></a-plane>

        <a-box boxa id="box1" depth="0.2" height="0.2" width="0.2" position="0 -0.4 -1.5" rotation="0 45 0" color="#4CC3D9" shadow></a-box>
      
<!--       <a-text id="text" value="BLA" position="0 0 -5" width="12" color="#000000"></a-text> -->
    </a-scene>
    
    <script src="overlay.js"></script>
    <script src="ui-control.js" type="module"></script>
    <script>
      // Define a function to reset the form fields
      function resetFormFields() {
        document.getElementById("submission-form").reset();
      }

      // Call the resetFormFields() function on page load
      window.onload = resetFormFields;
    </script>
  </body>
</html>
